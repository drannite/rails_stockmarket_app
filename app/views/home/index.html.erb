<h1>Home#index</h1>
<p>Find me in app/views/home/index.html.erb</p>

<%= form_tag root_path, :method => 'POST' do %>
  <%= text_field_tag 'ticker', nil, placeholder: "
      Enter Ticker Symbol", size: 50 %>
  <%= submit_tag 'Lookup' %>
<% end %>

<% if @error %>
  <%= @error %>
<% end %>

<% if @stock %>
  <%= @stock.latest_price %>
<% elsif @nothing %>
  <%= @nothing %>
<% end %>
